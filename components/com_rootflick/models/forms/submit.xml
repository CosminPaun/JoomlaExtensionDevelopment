<?xml version="1.0" encoding="utf-8"?>
<form>
	
		<field name="id"  type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"  />

		<field name="name" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" class="inputbox" size="30"
			required="true" labelclass="control-label" />

		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" class="inputbox" size="45" labelclass="control-label" required="true" />

		<field name="description" type="editor" class="inputbox"
			label="COM_CONTENT_FIELD_ARTICLETEXT_LABEL" description="COM_CONTENT_FIELD_ARTICLETEXT_DESC"
			filter="JComponentHelper::filterText" buttons="true" required="true" />
		
		<field name="video" type="textarea" class="inputbox"
			label="COM_ROOTFLICK_FIELD_VIDEO_LABEL" required="true" description="COM_ROOTFLICK_FIELD_VIDEO_DESC" />
			
		<field name="image" type="media"
			label="COM_ROOTFLICK_FIELD_IMAGE" description="COM_ROOTFLICK_FIELD_IMAGE_DESC" 
			directory="images" class="inputbox" required="true" />

		<field name="user_id" type="hidden" class="readonly" label="COM_ROOTFLICK_FIELD_USER_ID_LABEL"
			description="COM_ROOTFLICK_FIELD_USER_ID_DESC"  />
		
		<field name="chapter_id" type="hidden" class="readonly" label="COM_ROOTFLICK_FIELD_CHAPTER_ID_LABEL"
			description="COM_ROOTFLICK_FIELD_CHAPTER_ID_DESC" />
			
		<field name="submit_date" type="hidden" class="readonly" label="COM_ROOTFLICK_FIELD_SUBMIT_DATE_LABEL"
			description="COM_ROOTFLICK_FIELD_SUBMIT_DATE_DESC" />
		
</form>
